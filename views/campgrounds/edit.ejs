<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">Edit Campground</h1>

  <div class="col-6 offset-3">
    <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" class="form-control" name="campground[title]" value=<%=campground.title%> />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input id="location" class="form-control" name="campground[location]" value=<%=campground.location%> />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Url</label>
        <input id="image" class="form-control" name="campground[image]" value=<%=campground.image%> />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text" id="basic-addon1">$</span>
          <input id="price" name="campground[price]" type="number" step="0.01" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" value=<%=campground.price%>>
        </div>
      </div>


      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" class="form-control" name="campground[description]"> <%=campground.description%> </textarea>
      </div>

      <div class="mb-3">
        <input type="submit" class="btn btn-success" value="Update Campground">
      </div>
    </form>
    <a href="/campgrounds/<%=campground.id %>">Back to Campground</a>
  </div>

</div>